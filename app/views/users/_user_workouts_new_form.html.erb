<%= form_with(model: @workout, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :description %>

    <%= f.text_field :description, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :sport_id %>

    <%= f.collection_select :sport_id, Sport.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :distance %>

    <%= f.text_field :distance, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date %>

    <%= f.text_field :date, class: "form-control" %>
  </div>

  <%= f.submit "Create workout", class: "btn btn-block btn-outline-secondary" %>
<% end %>
