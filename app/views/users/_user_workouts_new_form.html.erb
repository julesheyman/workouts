<!-- Form workout start -->
<%= form_with(model: @workout, local: true) do |f| %>
<!-- Form workout end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>

    <!-- Input for description start -->
    <%= f.text_field :description, class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for sport_id start -->
  <div class="form-group">
    <%= f.label :sport_id %>

    <!-- Input for sport_id start -->
    <%= f.text_field :sport_id, class: "form-control" %>
    <!-- Input for sport_id end -->
  </div>
  <!-- Label and input for sport_id end -->

  <!-- Label and input for distance start -->
  <div class="form-group">
    <%= f.label :distance %>

    <!-- Input for distance start -->
    <%= f.text_field :distance, class: "form-control" %>
    <!-- Input for distance end -->
  </div>
  <!-- Label and input for distance end -->

  <!-- Label and input for date start -->
  <div class="form-group">
    <%= f.label :date %>

    <!-- Input for date start -->
    <%= f.text_field :date, class: "form-control" %>
    <!-- Input for date end -->
  </div>
  <!-- Label and input for date end -->

  <%= f.submit "Create workout", class: "btn btn-block btn-outline-secondary" %>
<% end %>
