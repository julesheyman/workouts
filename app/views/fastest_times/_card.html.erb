<div class="card mb-3">
  <h2 class="card-header h4">
    Fastest Time #<%= fastest_time.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Sport</dt>
      <dd>
        <% if @fastest_time.sport.present? %>
          <%= link_to fastest_time.sport, fastest_time.sport %>
        <% end %>
      </dd>

      <dt>Time spent</dt>
      <dd><%= fastest_time.time_spent %></dd>

      <dt>Workout</dt>
      <dd>
        <% if @fastest_time.workout.present? %>
          <%= link_to fastest_time.workout, fastest_time.workout %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back fastest_time, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_fastest_time_url(fastest_time), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to fastest_time, method: :delete, data: { confirm: "Do you really want to delete this fastest_time?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(fastest_time.updated_at) %> ago
  </div>
</div>
