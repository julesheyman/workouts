<% was_validated = fastest_time.errors.any? %>

<%= form_with(model: fastest_time, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% sport_class = "form-control" %>
    <% sport_was_invalid = fastest_time.errors.include?(:sport) %>

    <% if was_validated %>
      <% if sport_was_invalid %>
        <% sport_class << " is-invalid" %>
      <% else %>
        <% sport_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :sport_id %>
    <%= f.collection_select :sport_id, Sport.all, :id, :to_s, {}, class: "form-control" %>
    <% if sport_was_invalid %>
      <% fastest_time.errors.full_messages_for(:sport).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% time_spent_class = "form-control" %>
    <% time_spent_was_invalid = fastest_time.errors.include?(:time_spent) %>

    <% if was_validated %>
      <% if time_spent_was_invalid %>
        <% time_spent_class << " is-invalid" %>
      <% else %>
        <% time_spent_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :time_spent %>
    <%= f.text_field :time_spent, class: time_spent_class, placeholder: "Enter time spent" %>
    <% if time_spent_was_invalid %>
      <% fastest_time.errors.full_messages_for(:time_spent).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% workout_class = "form-control" %>
    <% workout_was_invalid = fastest_time.errors.include?(:workout) %>

    <% if was_validated %>
      <% if workout_was_invalid %>
        <% workout_class << " is-invalid" %>
      <% else %>
        <% workout_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :workout_id %>
    <%= f.collection_select :workout_id, Workout.all, :id, :to_s, {}, class: "form-control" %>
    <% if workout_was_invalid %>
      <% fastest_time.errors.full_messages_for(:workout).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
