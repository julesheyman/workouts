<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Fastest Times

    <a data-toggle="collapse" href="#workout_fastest_times_new_form">
      Add fastest time
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @workout.fastest_times.each do |fastest_time| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to fastest_time, fastest_time %>

        <%= link_to fastest_time, method: :delete, data: { confirm: "Do you really want to delete this fastest_time" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="workout_fastest_times_new_form">
        <%= render partial: "workouts/workout_fastest_times_new_form" %>
      </div>
    </div>

  </ul>
</div>
