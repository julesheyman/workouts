<div class="card mb-3">
  <h2 class="card-header h4">
    Workout #<%= workout.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Description</dt>
      <!-- Display description start -->
      <dd><%= workout.description %></dd>
      <!-- Display description end -->

      <dt>User</dt>
      <!-- Display user_id start -->
      <dd><%= workout.user_id %></dd>
      <!-- Display user_id end -->

      <dt>Sport</dt>
      <!-- Display sport_id start -->
      <dd><%= workout.sport_id %></dd>
      <!-- Display sport_id end -->

      <dt>Distance</dt>
      <!-- Display distance start -->
      <dd><%= workout.distance %></dd>
      <!-- Display distance end -->

      <dt>Date</dt>
      <!-- Display date start -->
      <dd><%= workout.date %></dd>
      <!-- Display date end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back workout, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link workout start -->
      <div class="col">
        <% if current_user == @workout.user %>
          <%= link_to edit_workout_url(workout), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link workout end -->

      <!-- Delete link workout start -->
      <div class="col">
        <% if current_user == @workout.user %>
          <%= link_to workout, method: :delete, data: { confirm: "Do you really want to delete this workout?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link workout end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(workout.updated_at) %> ago
  </div>
</div>
