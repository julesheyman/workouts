<div class="card mb-3">
  <h2 class="card-header h4">
    Workout #<%= workout.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Description</dt>
      <dd><%= workout.description %></dd>

      <dt>Sport</dt>
      <dd>
        <% if @workout.sport.present? %>
          <%= link_to workout.sport, workout.sport %>
        <% end %>
      </dd>

      <dt>Distance</dt>
      <dd><%= workout.distance %></dd>

      <dt>Date</dt>
      <dd><%= workout.date %></dd>

      <dt>Name</dt>
      <dd><%= workout.name %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back workout, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_workout_url(workout), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to workout, method: :delete, data: { confirm: "Do you really want to delete this workout?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(workout.updated_at) %> ago
  </div>
</div>
