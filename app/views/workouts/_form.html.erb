<% was_validated = workout.errors.any? %>

<%= form_with(model: workout, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = workout.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <%= f.text_field :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% workout.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <% sport_class = "form-control" %>
    <% sport_was_invalid = workout.errors.include?(:sport) %>

    <% if was_validated %>
      <% if sport_was_invalid %>
        <% sport_class << " is-invalid" %>
      <% else %>
        <% sport_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :sport_id %>
    <%= f.collection_select :sport_id, Sport.all, :id, :to_s, {}, class: "form-control" %>
    <% if sport_was_invalid %>
      <% workout.errors.full_messages_for(:sport).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% distance_class = "form-control" %>
    <% distance_was_invalid = workout.errors.include?(:distance) %>

    <% if was_validated %>
      <% if distance_was_invalid %>
        <% distance_class << " is-invalid" %>
      <% else %>
        <% distance_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :distance %>
    <%= f.text_field :distance, class: distance_class, placeholder: "Enter distance" %>
    <% if distance_was_invalid %>
      <% workout.errors.full_messages_for(:distance).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% date_class = "form-control" %>
    <% date_was_invalid = workout.errors.include?(:date) %>

    <% if was_validated %>
      <% if date_was_invalid %>
        <% date_class << " is-invalid" %>
      <% else %>
        <% date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :date %>
    <%= f.text_field :date, class: date_class, placeholder: "Enter date" %>
    <% if date_was_invalid %>
      <% workout.errors.full_messages_for(:date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
