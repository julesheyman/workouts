<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Workouts

    <a data-toggle="collapse" href="#sport_workouts_new_form">
      Add workout
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @sport.workouts.each do |workout| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to workout, workout %>

        <% if current_user == workout.user %>
          <%= link_to workout, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="sport_workouts_new_form">
        <%= render partial: "sports/sport_workouts_new_form" %>
      </div>
    </div>

  </ul>
</div>
