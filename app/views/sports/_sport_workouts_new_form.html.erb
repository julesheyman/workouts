<%= form_with(model: @workout, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :description %>

    <%= f.text_field :description, class: "form-control" %>
  </div>

  <%= f.hidden_field :sport_id, value: @sport.id %>

  <div class="form-group">
    <%= f.label :distance %>

    <%= f.text_field :distance, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date %>

    <%= f.text_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <%= f.submit "Create workout", class: "btn btn-block btn-outline-secondary" %>
<% end %>
